{
    "compilerOptions": {
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es5",
        "outDir": "./dist/",
        "allowJs": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "baseUrl": "./src",
        "paths": {
            "~*": ["./*"]
        },
        "typeRoots": ["node_modules/@types"]
    },
    "include": [
        "./src/**/*"
    ]
}